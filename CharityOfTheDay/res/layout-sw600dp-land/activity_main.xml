<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrlView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

	    <ImageView
	        android:id="@+id/Main_ImageView_TopBanner"
	        android:layout_width="wrap_content"
	        android:layout_height="200dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginBottom="10dp"
	        android:scaleType="centerCrop"
	        android:src="@drawable/activity_main_top" />
	
		<TextView
		    android:id="@+id/charityName"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/Main_TextView_CotdLabel"
		    android:layout_toRightOf="@+id/Main_TextView_CotdLabel"
		    android:paddingBottom="5dp"
		    android:paddingLeft="12dp"
		    android:paddingTop="5dp"
		    android:text="Charity Name"
		    android:textAppearance="?android:attr/textAppearanceLarge"
		    android:textSize="50sp"
		    android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/charityDescription"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_toLeftOf="@+id/Main_Button_VisitWebsite"
	        android:layout_marginRight="20dp"
	        android:layout_below="@+id/Main_TextView_CotdLabel"
	        android:paddingLeft="10dp"
	        android:paddingTop="10dp"
	        android:text="Charity Description"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textSize="22sp" />
	
	    <Button
	        android:id="@+id/Main_Button_DonateNow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/Main_Button_VisitWebsite"
	        android:layout_alignRight="@+id/Main_Button_VisitWebsite"
	        android:layout_below="@+id/Main_Button_VisitWebsite"
	        android:layout_marginTop="25dp"
	        android:background="@drawable/orange_button"
	        android:onClick="donateNow"
	        android:paddingBottom="10dp"
	        android:paddingTop="10dp"
	        android:text="@string/donate_donation_button_donate"
	        android:textSize="38sp"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/Main_TextView_CotdLabel"
	        style="@style/LandscapeTitleText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/Main_ImageView_TopBanner"
	        android:paddingBottom="5dp"
	        android:paddingRight="12dp"
	        android:paddingTop="5dp"
	        android:text="Charity of the Day"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textSize="50sp" />
	
	    <Button
	        android:id="@+id/Main_Button_VisitWebsite"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/charityDescription"
	        android:layout_marginRight="25dp"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/gray_button"
	        android:onClick="VisitWebsite_Click"
	        android:paddingBottom="10dp"
	        android:paddingLeft="30dp"
	        android:paddingRight="30dp"
	        android:paddingTop="10dp"
	        android:text="@string/main_button_viewwebsite"
	        android:textSize="35sp" />
	    <ImageView
	        android:id="@+id/Main_ImageView_CharityLogo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignRight="@+id/Main_Button_VisitWebsite"
	        android:src="@drawable/abc_ab_bottom_solid_dark_holo" 
	        />
	    	
	</RelativeLayout>
</ScrollView>