<?xml version="1.0" encoding="utf-8"?>
<!-- button with an orange background -->
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#f8c836" />
            <stroke
                android:width="4dp"
                android:color="#f68b0e" />
        </shape>
    </item>

    <item>        
        <shape>
            <solid
                android:color="@color/bitcoin_orange" />
    </shape>
    </item>
</selector>
