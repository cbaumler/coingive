<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrlView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
	    <ImageView
	        android:id="@+id/Main_ImageView_TopBanner"
	        android:layout_width="wrap_content"
	        android:layout_height="280dp"
	        android:layout_marginBottom="10dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:src="@drawable/activity_main_top" 
	        android:scaleType="centerCrop"/>
        
	    <TextView
	        android:id="@+id/charityName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/Main_TextView_CotdLabel"
	        android:layout_toRightOf="@+id/Main_TextView_CotdLabel"
	        android:paddingBottom="5dp"
	        android:paddingLeft="20dp"
	        android:paddingTop="5dp"
	        android:text="Charity Name"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textSize="60sp"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/charityDescription"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/Main_TextView_CotdLabel"
	        android:layout_toLeftOf="@+id/Main_Button_VisitWebsite"
	        android:layout_marginRight="20dp"
	        android:paddingLeft="10dp"
	        android:paddingTop="20dp"
	        android:text="Charity Description"
	        android:textAppearance="?android:attr/textAppearanceSmall"
	        android:textSize="28sp" />
	
	    <Button
	        android:id="@+id/Main_Button_DonateNow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/Main_Button_VisitWebsite"
	        android:layout_alignRight="@+id/Main_Button_VisitWebsite"
	        android:layout_below="@+id/Main_Button_VisitWebsite"
	        android:layout_marginTop="35dp"
	        android:background="@drawable/orange_button"
	        android:onClick="donateNow"
	        android:paddingBottom="20dp"
	        android:paddingTop="20dp"
	        android:text="@string/donate_donation_button_donate"
	        android:textSize="45sp"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/Main_TextView_CotdLabel"
	        style="@style/LandscapeTitleText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/Main_ImageView_TopBanner"
	        android:paddingBottom="5dp"
	        android:paddingLeft="15dp"
	        android:paddingRight="15dp"
	        android:paddingTop="5dp"
	        android:text="Charity of the Day"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textSize="60sp" />
	
	    <Button
	        android:id="@+id/Main_Button_VisitWebsite"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/charityDescription"
	        android:layout_marginRight="25dp"
	        android:layout_marginTop="30dp"
	        android:background="@drawable/gray_button"
	        android:onClick="VisitWebsite_Click"
	        android:paddingBottom="20dp"
	        android:paddingLeft="60dp"
	        android:paddingRight="60dp"
	        android:paddingTop="20dp"
	        android:text="@string/main_button_viewwebsite"
	        android:textSize="40sp" />

	    <ImageView
	        android:id="@+id/Main_ImageView_CharityLogo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignRight="@+id/Main_Button_VisitWebsite"
	        android:src="@drawable/abc_ab_bottom_solid_dark_holo" 
	        />
	
	</RelativeLayout>
</ScrollView>