<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrlView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <ImageView
            android:id="@+id/Main_ImageView_TopBanner"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/activity_main_top" />
        
        <TextView
            android:id="@+id/charityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Main_TextView_CotdLabel"
            android:layout_toRightOf="@+id/Main_TextView_CotdLabel"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Charity Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/charityDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Main_TextView_CotdLabel"
            android:paddingLeft="10dp"
            android:paddingRight="195dp"
            android:paddingTop="10dp"
            android:text="Charity Description"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="11sp" />

        <Button
            android:id="@+id/Main_Button_DonateNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Main_Button_VisitWebsite"
            android:layout_alignRight="@+id/Main_Button_VisitWebsite"
            android:layout_below="@+id/Main_Button_VisitWebsite"
            android:layout_marginTop="10dp"
            android:background="@drawable/orange_button"
            android:minHeight="35dp"
            android:onClick="donateNow"
            android:text="@string/donate_donation_button_donate"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Main_TextView_CotdLabel"
            style="@style/LandscapeTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Main_ImageView_TopBanner"
            android:text="Charity of the Day"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="22sp" />

        <Button
            android:id="@+id/Main_Button_VisitWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/charityDescription"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gray_button"
            android:minHeight="35dp"
            android:onClick="VisitWebsite_Click"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/main_button_viewwebsite"
            android:textSize="18sp" />
        
	    <ImageView
	        android:id="@+id/Main_ImageView_CharityLogo"
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_alignRight="@+id/Main_Button_VisitWebsite"
	        android:src="@drawable/abc_ab_bottom_solid_dark_holo" 
	        />
        
    </RelativeLayout>

</ScrollView>